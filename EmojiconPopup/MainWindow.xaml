<Window x:Class="AsciiBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:AsciiBrowser"
        mc:Ignorable="d"
        Title="AsciiBrowser" 
        Loaded="Window_Loaded" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" 
        ShowInTaskbar="False" 
        WindowStyle="None"
        Activated="Window_Activated" Icon="Icons/EmojiconPopup.ico"
        >
    <StackPanel x:Name="ButtonStack" Orientation="Vertical">
        <tb:TaskbarIcon IconSource="Icons/EmojiconPopup.ico">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="Exit_Click" Header="Exit" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </StackPanel>
</Window>
